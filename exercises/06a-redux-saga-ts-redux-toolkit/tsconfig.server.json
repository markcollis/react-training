{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist-server",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src-server/types/*"
            ]
        },
        "types": ["node", "express"]
    },
    "include": [
        "src-server/**/*"
    ]
}